@model btweb3_12.Models.Book

<h2>Chi tiết sách</h2>

<div class="card" style="width: 18rem;">
    <img src="@Model.Image" class="card-img-top" alt="@Model.Title" style="max-height: 200px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Tác giả:</strong> @Model.Author</p>
        <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
        <p class="card-text"><strong>Giá bán:</strong> @Model.Price.ToString("C")</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>
